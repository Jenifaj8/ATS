@model ATS.Core.Entities.Assessment

@{
    ViewData["Title"] = "Delete Assessment";
}

<h1>Delete Assessment</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this assessment?</h4>
</div>

<div class="card">
    <div class="card-body">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Course:</strong> @Model.Course?.Name</p>
        <p><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</p>
        <p><strong>Status:</strong> @Model.Status</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>