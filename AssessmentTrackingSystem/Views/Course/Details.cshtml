@model ATS.Core.Entities.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Code</dt>
            <dd class="col-sm-10">@Model.Code</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@if (Model.Assessments != null && Model.Assessments.Any())
{
    <hr />
    <h3 class="mt-3">Assessments</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Due Date</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var a in Model.Assessments)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.DueDate</td>
                <td>@a.Status</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p class="mt-3 text-muted">No assessments for this course yet.</p>
}